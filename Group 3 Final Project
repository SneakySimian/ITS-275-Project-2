package finalProject;

import java.util.Scanner;

public class FinalProject {
	  public static void main(String[] args) {
		    int state;		
		    
		    Scanner keyboard = new Scanner(System.in);
		    
		    System.out.println("1 = NC, " + "2 = SC, " + "3 = TX, " + "4 = AL, " + 
		     "5 = LA, " + "6 = FL " + "7 = GA." );
		    
		    System.out.println("0= If you don't see your state abbreviations");
		    
		    System.out.print("Where are you trying to deliver to? " + "\n"
		    + "Please enter the corresponding number with the state's abbreviation");
		      state = keyboard.nextInt();
		      
		    switch (state) {
		      case 1:
		        System.out.println("We do deliver To North Carolina!");
		        break;
		      case 2:
		        System.out.println("We do deliver to South Carolina!");
		        break;
		      case 3:
		        System.out.println("We do deliver to Texas!");
		        break;
		      case 4:
		        System.out.println("We do deliver to Alabama!");
		       break;
		      case 5:
		        System.out.println("We do deliver to Louisiana!");
		       break;
		      case 6:
		        System.out.println("We do deliver to Florida!");
		       break;
		      case 7:
		        System.out.println("We do deliver to Gorgia!");
		        break;
		        
		      default:
		            System.out.println('\n' + "Sorry, but unfortunately we do not deliver to your state.");
		    }
	  }
		   

	  			public static void  BoxPrices ()
		            {
		        		
		        		int[][] numbers = { {5}, {13}, {18} };
		        	
		        		System.out.println("Small Box Cost:" + numbers [0][0]);
		        		System.out.println("Medium Box Cost:" + numbers [1][1]);
		        		System.out.println("Big Box Cost:" + numbers [2][2]);
		        		System.out.println();
		            
		        	
		    
		    }
	  }
