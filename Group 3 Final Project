// This is the name of our package for our project code.
package finalProject;
// Here, we imported a scanner to read the system out prints.
import java.util.Scanner;
// Here, we imported the statement, import java.util.Arrays;, 
// to call the String method on array elements.
import java.util.Arrays;


class location {
// this is an example of an inheritance class.
// this includes methods and fields for this class.
}

class State extends location {
// extends is the keyword used in this inheritance class.
// the methods and fields in this example are State,
// and location.
// The State extends the location. 
// The user should input the specific state that he or she,
// wants to ship to, the specific location. 
}

// This is the name of our class and package.
public class finalProject {
	  
		// Shows price of cheapest box with shipping 
		public static int sum(int x, int y)
		{
			return (x + y);
		}
	
		// Shows Price of Second most Expensive box with shipping 
		public float sum(float x, float y)
		{
			return (x + y);
		}
	
		// Shows the price of most expensive box with shipping 
		public double sum(double x, double y)
		{
			return (x + y);
		}
		//The Smallest box method
		static int smallBox() {
		return sum(13, 5);
		}
		//The medium size box method
		static int medBox() {
		return sum(13, 8);
		}
		//The Largest size box method
		static int largeBox() {
		return sum (13, 11);
		} 
		
		
public static void main(String[] args) {
